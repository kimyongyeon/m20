<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:layout_marginTop="15dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/program_buldup_menu1"
                android:textColor="#fff"
                android:textSize="25pt"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_shadow_top"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
<!-- 후면 -->
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/model_back_nopad">

            <!-- 어깨 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="110dp">

                <TextView
                    android:id="@+id/btn_latt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_latt_left"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_latt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_latt_right"
                    android:gravity="center"
                    android:paddingRight="24dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 허리 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="260dp">

                <TextView
                    android:id="@+id/btn_waist_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-10dp"
                    android:background="@drawable/button_pad_waist_left"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_waist_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_waist_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 옆구리 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="240dp">

                <TextView
                    android:id="@+id/btn_sideflank_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/button_pad_sideflank_left"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_sideflank_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_sideflank_right"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>


            <!-- 둔부 -->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="85dp">

                <TextView
                    android:id="@+id/btn_arsch_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_arsch_left"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_arsch_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_arsch_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>
        </RelativeLayout>
<!-- 전면 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/model_front_nopad">

            <!-- 가슴 -->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="160dp">

                <TextView
                    android:id="@+id/btn_brust_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_brust_left"
                    android:layout_marginRight="-10dp"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_brust_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_brust_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 팔 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="198dp">

                <TextView
                    android:id="@+id/btn_arm_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="106dp"
                    android:background="@drawable/button_pad_arm_left"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_arm_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_arm_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 배 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="285dp">

                <TextView
                    android:id="@+id/btn_abdomen_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_abdomen_left"
                    android:layout_marginRight="-10dp"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_abdomen_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_abdomen_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 허벅지 -->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="420dp">

                <TextView
                    android:id="@+id/btn_bein_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_bein_left"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_bein_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-18dp"
                    android:background="@drawable/button_pad_bein_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <!-- 강도 테스트 -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_strong_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector3"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="강도 설정"
                    android:textSize="16pt"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector3"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="시작"
                    android:textSize="16pt"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- 퍼센트 -->
            <RelativeLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="270dp"
                android:gravity="center">
                <app.com.m20.customview.HoloCircularProgressBar
                    android:id="@+id/holoCircularProgressBar"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    app:marker_progress="100"
                    app:progress="0.5" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="230dp"
                    android:layout_height="230dp">
                    <TextView
                        android:id="@+id/txtPersent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="#fff200"
                        android:textSize="32pt" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
<!--  시크바 -->
        <RelativeLayout
            android:layout_width="1350dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp">
            <!-- 시크바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <SeekBar

                    android:id="@+id/btn_sb"
                    android:layout_width="950dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/seekbar_seekbar1"
                    android:thumb="@drawable/seekbar_seekbar1_thumb" />

            </LinearLayout>

            <!-- 마이너스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="-40dp"
                android:layout_marginLeft="70dp">

                <ImageButton
                    android:id="@+id/btn_minus"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_selector6" />

            </LinearLayout>

            <!-- 플러스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="-40dp"
                android:layout_marginRight="70dp">

                <ImageButton
                    android:id="@+id/btn_plus"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_selector4" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>