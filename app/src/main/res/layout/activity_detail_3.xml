<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:layout_marginTop="15dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/program_buldup_menu1"
                android:textColor="#fff"
                android:textSize="25pt"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_shadow_top"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/model_back_nopad">

            <!-- 어깨 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="110dp">

                <TextView
                    android:id="@+id/btn_latt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_latt_left"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_latt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_latt_right"
                    android:gravity="center"
                    android:paddingRight="24dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 허리 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="260dp">

                <TextView
                    android:id="@+id/btn_waist_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-10dp"
                    android:background="@drawable/button_pad_waist_left"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_waist_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_waist_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>

            <!-- 옆구리 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="240dp">

                <TextView
                    android:id="@+id/btn_sideflank_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/button_pad_sideflank_left"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_sideflank_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_sideflank_right"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>


            <!-- 둔부 -->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="85dp">

                <TextView
                    android:id="@+id/btn_arsch_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_arsch_left"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />

                <TextView
                    android:id="@+id/btn_arsch_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pad_arsch_right"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="20" />
            </LinearLayout>
        </RelativeLayout>


        <!-- /////////////////////////////////////////////////   -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="655dp"
                android:layout_marginLeft="150dp">

                <TextView
                    android:id="@+id/btn_model_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector3"
                    android:gravity="center"
                    android:text="전면/후면"
                    android:textSize="16pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="620dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="흉부"
                    android:textColor="#fff"
                    android:textSize="25pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 퍼센트 -->
            <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="220dp"
                android:gravity="center">

                <app.com.m20.customview.HoloCircularProgressBar
                    android:id="@+id/holoCircularProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:marker_progress="100"
                    app:progress="0.5" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtPersent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="#d6f750"
                        android:textSize="32pt" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="500dp"

                android:gravity="center">
                <!-- 시크바 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="30dp">

                    <SeekBar
                        android:id="@+id/btn_sb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/seekbar_seekbar1"
                        android:thumb="@drawable/seekbar_seekbar1_thumb" />
                </LinearLayout>

                <!-- 마이너스 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <ImageButton
                        android:id="@+id/btn_minus"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/button_selector6" />

                </LinearLayout>

                <!-- 플러스 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageButton
                        android:id="@+id/btn_plus"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/button_selector4" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="620dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_strong_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector3"
                        android:text="강도 테스트"
                        android:textSize="16pt"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector3"
                        android:text="완료"
                        android:textSize="16pt"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>